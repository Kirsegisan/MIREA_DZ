#include <iostream>
using namespace std;
double check(double x) {
    // Проверка на x = 1, т.к. функция неопределена в этой точке
    if (x == 1) {
        cout << "Функция неопределена при x = 1" << endl;
        return 0;
    }

    // Функция
    double y = (x * x - 2 * x + 2) / (x - 1);
    return y;
}

int main() {
    system("chcp 65001");
    // Вывод
    for (double x = -4; x <= 4; x += 0.5) {
        double y = x;
        cout << "x = " << x << ", y = " << y << endl;
    }

    return 0;
}
